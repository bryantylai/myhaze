<UserControl x:Class="HazeWP.DynamicTile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="173" d:DesignWidth="173">

    <Canvas Background="{Binding Background}" Width="173" Height="173" x:Name="layoutRoot">
        <Grid Width="173" Height="160">
            <TextBlock Text="Haze MY" HorizontalAlignment="Left" Foreground="Black" FontSize="26" FontFamily="/HazeWP;component/Fonts/Fonts.zip#Andy" Margin="3,3,0,0"/>
            <TextBlock Text="{Binding Time}" Foreground="Black" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="20" Margin="0,0,10,0" />
            <TextBlock Text="{Binding API}" Foreground="Black" Width="103" FontSize="64" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <TextBlock Text="{Binding Location}" Foreground="Black" Width="163" FontSize="20" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Left" VerticalAlignment="Bottom" />
        </Grid>
    </Canvas>

</UserControl>